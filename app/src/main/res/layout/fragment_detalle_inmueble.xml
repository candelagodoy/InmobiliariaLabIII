<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inmuebles.DetalleInmuebleFragment"
    android:background="@drawable/inmobi">


    <LinearLayout
        android:id="@+id/llId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:paddingBottom="8dp"
        >

        <TextView
            android:id="@+id/tvInfoCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textColor="@color/grey2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#33FFA726"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:background="@drawable/bg_sutil_naranja"/>

        <TextView
            android:id="@+id/tvIdInmueble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345"
            android:textColor="@color/grey2"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/llId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvInfoDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DirecciÃ³n:"
            android:textColor="@color/grey2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#33FFA726"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:background="@drawable/bg_sutil_naranja"/>

        <TextView
            android:id="@+id/tvDireccionI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Av. Siempre Viva 742"
            android:textColor="@color/grey2"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llUso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/llDireccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvInfoUso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uso:"
            android:textColor="@color/grey2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#33FFA726"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:background="@drawable/bg_sutil_naranja"/>

        <TextView
            android:id="@+id/tvUsoI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Residencial"
            android:textColor="@color/grey2"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llAmbientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/llUso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvInfoAmbientesI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambientes:"
            android:textColor="@color/grey2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#33FFA726"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:background="@drawable/bg_sutil_naranja"/>

        <TextView
            android:id="@+id/tvAmbientesI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/grey2"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llLatitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/llAmbientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvInfoLatitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitud:"
            android:textColor="@color/grey2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#33FFA726"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:background="@drawable/bg_sutil_naranja"/>

        <TextView
            android:id="@+id/tvLatitudI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45.12345"
            android:textColor="@color/grey2"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llLongitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/llLatitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvInfoLongitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitud:"
            android:textColor="@color/grey2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#33FFA726"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:background="@drawable/bg_sutil_naranja"/>

        <TextView
            android:id="@+id/tvLongitudI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-93.12345"
            android:textColor="@color/grey2"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/llLongitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvInfoValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor:"
            android:textColor="@color/grey2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#33FFA726"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:background="@drawable/bg_sutil_naranja"/>

        <TextView
            android:id="@+id/tvValorI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$120,000"
            android:textColor="@color/grey2"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>


    <CheckBox
        android:id="@+id/checkDisponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponible"
        android:textColor="@color/grey2"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        app:buttonTint="@color/orange"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/llValor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="251dp"
        android:layout_height="183dp"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkDisponible"
        app:strokeColor="@color/orange"
        app:strokeWidth="1dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgInmuebleD"
            android:layout_width="232dp"
            android:layout_height="151dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedCorners" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvMensajeEstadoInmueble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="196dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



